@font-face {
    font-family: 'Jura';
    src: font_url('Jura-Regular.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Jura-bold';
    src: font_url('Jura-DemiBold.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Jura-light';
    src: font_url('Jura-Light.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Nebula';
    src: font_url('Nebula-Regular.oft') format('opentype');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Nasa';
    src: font_url('nasalization-rg.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

$aurora: #70c1ff;

html, body {
	height: 100%;
	width: 100%;
	margin: 0;
	padding: 0;
}

$background: #474747;

body {
	font-family: 'Helvetica Neue', 'Roboto', Arial, sans-serif;
	min-width: 100%;
	background: $background;
}

.navbar {
	margin-bottom: 0;
}

h1 {
	font-family: 'Jura-light';
	font-size: 3.5em;
	font-weight: 200;
}

h2 {
	font-family: 'Jura';
	font-size: 3em;
	font-weight: 100;
}

h3 {
	font-family: 'Jura-bold';
	font-size: 2em;
	// font-weight: 200;
}

h4 {
	font-size: 1.6em;
	font-weight: 300;
}

p {
	font-size: 1.4em;
	color: rgb(90,90,90);
	font-weight: 400;

	.sub-text {
		font-size: 0.7em !important;
		font-weight: 400;
	}
}

.sexy-stats {
	display: table;
	margin: 25px auto;
	height: 100%;
	width: 100%;
	ul {
		position: absolute;
		text-align: center;
		width: 100%;
		padding-bottom: 0;
		li {
			font-family: "jura-light";
			font-size: 2em;
			display: inline;
			margin: 10px 25px;
			color: white;
			// color: rgb(225,225,225);
		}
	}
}

.feature-title {
	position: relative;
	margin-bottom: -100px;
	z-index: 3;
	color: $aurora;
	@media (max-width: 768px) {
		margin-bottom: 0;
	}
}
.feature-content {
	position: relative;
	margin-top: -100px;
	z-index: 2;
	@media (max-width: 768px) {
		margin-top: 100px;
	}
	&.with-buttons {
		margin-top: -225px;
		@media (max-width: 922px) {
			margin-top: 25px;
		}
	}
}
.feature-column {
	padding: 0 30px;
	p {
		text-align: justify;
	}
}
.feature-button {
	font-family: 'jura-bold';
	color: $aurora;
	font-size: 2em;
	// font-weight: 200;
}

ul {
	padding-bottom: 30px;
	li {
		font-size: 1.4em;
		color: rgba(0,0,0,0.65);
		font-weight: 300;
	}
}

hr.margin {
	border-bottom: 2px solid rgb(235,235,235);
	margin: 30px 0;
}

hr.dashed {
	border-color: #bfbfbf;
	border-style: dashed;
}

.aurora {
	color: $aurora;
}

.gray {
	color: gray;
}

.light-gray {
	color: rgb(170,170,170);
}

.dark-red {
	color: #991A45;
}

.zen-green {
	color: rgb(67,179,164);
}

.emphasize-color {
	color: #00ccff;
}

.dark-blue {
	color: $aurora;
}

.section {
	padding-top: 150px;
	padding-bottom: 150px;
}

.section-top {
	padding-top: 25px;
}

.dark {
		color: white;
	p {
		color: darken(white, 25%);
	}
}

.shadow {
	text-shadow: 0px 0px 4px rgba(0,0,0,0.8);
}

.bluebg {
	background: $aurora;
	// background: rgb(41,93,145);
	// background: url(data:image/svg+xml;base64,);
	// background: -moz-linear-gradient(left,  rgba(41,93,145,1) 0%, rgba(130,230,203,1) 100%); /* FF3.6-15 */
