#meettrevor {
	background-color: rgb(30,30,30);
	color: white;
	text-align: center;
	padding-top: 70px;
	padding-bottom: 90px;
	h3 {
		font-size: 1.7em;
		font-weight: 300;
		line-height: 1.7em;
	}
	.faded {
		opacity: 0.60;
	}
}

.download {
	padding: 0;
	#mc_embed_signup {
		height: 100%;
		background-color: rgba(255,255,255,0);
		form {
			
			h1 {
				font-family: inherit;
				font-weight: 200;
			}
			#mce-EMAIL {
				margin-top: 0;
				background-color: rgba(255,255,255,0);
				border: none;
				border-bottom: 1px solid white;
				font-size: 2em;
				font-weight: 200;
			}
			.button {
				width: 100%;
				height: 50px;
				background-color: rgba(255,255,255,0);
				border: 1px solid white;
				color: white;
				text-transform: uppercase;
				&:hover {
					background-color: rgba(255,255,255,0.1);
				}
			}
			.mce_inline_error {
				background: none;
				color: white;
			}
			.mce-responses * {
				background: none;
				color: white !important;
			}
			.indicates-required {
				display: none;
			}
			.mc-field-group label {
				display: none;
			}
		}
	}
}

