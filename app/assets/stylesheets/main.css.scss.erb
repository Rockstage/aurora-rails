.button {
	display: inline-block;
	text-align: center;
	vertical-align: text-center;
	font-size: 1em;
	font-weight: 300;
	color: white;
	padding: 10px;
	margin: 5px;
	background-color: rgba(255,255,255,0);
	border: 1px solid white;
	border-radius: 5px;
	text-transform: uppercase;
	&.button-blue {
		color: $aurora;
		border: 1px solid $aurora;
		&:hover {
			background-color: rgba(112,193,255,0.1);
			color: $aurora;
		}
	}
	&:hover {
		background-color: rgba(255,255,255,0.1);
		text-decoration: none;
		color: white;
	}
	&.button-blue-solid {
		color: white;
		background-color: $aurora;
		border: none;
		&:hover {
			background-color: rgba(112,193,255,0.9);
			color: white;
		}
	}
}

