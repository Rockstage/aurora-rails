}

.graybg {
	background: #474747;
}

.faded {
	opacity: 0.5;
}

.flip-img {
    -moz-transform: rotateY(180deg);
    -o-transform: rotateY(180deg);
    -webkit-transform: rotateY(180deg);
    transform: rotateY(180deg);
    filter: FlipH;
    -ms-filter: "FlipH";
}

.vertical-align {
	display: flex;
    align-items: center;
}

.render {
	display: block;
	width: 100%;
	margin-left: auto;
	margin-right: auto;
